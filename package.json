{
    "name": "@hamworks/wp-csv-exporter",
    "version": "0.0.1",
    "private": true,
    "author": "HIroshi Urabe <mail@torounit.com> (https://torounit.com)",
    "license": "GPL-3.0+",
    "scripts": {
        "wp-env": "wp-env",
        "test-unit-php": "wp-env run phpunit 'phpunit -c /var/www/html/wp-content/plugins/csv-exporter/phpunit.xml.dist --verbose'",
        "packages-update": "wp-scripts packages-update",
        "lint-php": "./vendor/bin/phpcs --standard=./.phpcs.xml.dist"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/team-hamworks/wp-csv-exporter.git"
    },
    "devDependencies": {
        "@wordpress/env": "^2.1.0",
        "lint-staged": "^10.5.3",
        "husky": "^4.3.5"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "packages/*/package.json": [
            "wp-scripts lint-pkg-json"
        ],
        "{*.css,*.scss}": [
            "npm run lint-style"
        ],
        "*.js": [
            "npm run format-js",
            "npm run lint-js"
        ],
        "*.php": [
            "npm run lint-php"
        ]
    }
}
